<header>
    <!-- Barre promotionnelle en haut -->
    <div class="promo-banner text-center text-white bg-black py-1">
        2 mangas achetés, livraison offerte
    </div>
    
    <!-- Header principal -->
    <div class="main-header">
        <div class="container-fluid">
            <div class="header-content">
                <!-- Logo -->
                <a href="/" class="header-logo">
                    <img src="/images/newLogo.png" alt="MangaThèque" class="logo-img">
                </a>
                
                <!-- Navigation -->
                <nav class="header-nav">
                    <a href="/nos-series" class="nav-link">Nos séries</a>
                    <a href="/nos-mangas" class="nav-link">Nos mangas</a>
                    <a href="/categories/1" class="nav-link">Shonen</a>
                    <a href="/categories/2" class="nav-link">Seinen</a>
                    <a href="/categories/3" class="nav-link">Shojo</a>
                </nav>
                
                <!-- Icônes -->
                <div class="header-icons">
                    <% if (connecte) { %>
                        <a href="/coupCoeur" class="icon-link">
                            <i class="fas fa-heart"></i>
                        </a>
                    <% } %>
                    <a href="#" id="search-toggle" class="icon-link">
                        <i class="fas fa-search"></i>
                    </a>
                    <a href="#" id="profile-button" class="icon-link position-relative">
                        <i class="fas fa-user"></i>
                        <% if (notificationNonLue > 0) { %>
                            <span class="notif-badge"></span>
                        <% } %>
                    </a>
                    <a href="/panier" class="icon-link">
                        <i class="fas fa-shopping-bag"></i>
                    </a>
                </div>
            </div>
        </div>
    </div>
    
    <!-- Barre de recherche (cachée par défaut) -->
    <div class="search-bar-container" id="search-bar-container">
        <div class="container-fluid">
            <form action="/recherche-page" method="GET" class="search-form">
                <div class="search-input-wrapper">
                    <div class="search-icon">
                        <i class="fas fa-search"></i>
                    </div>
                    <input type="text" name="q" id="search-input" class="search-input" placeholder="Chercher..." autocomplete="off">
                    <button type="button" class="search-close" id="search-close">
                        <i class="fas fa-times"></i>
                    </button>
                </div>
            </form>
        </div>
        <div class="search-results" id="search-results">
            <!-- Les résultats de recherche seront ajoutés ici par JavaScript -->
        </div>
    </div>
</header>

<!-- Overlay pour assombrir la page -->
<div id="search-overlay" class="search-overlay"></div>

<!-- Éléments nécessaires pour le menu du profil -->
<div id="profile-overlay" class="profile-overlay"></div>
<div id="profile-dropdown" class="profile-dropdown">
    <div class="profile-dropdown-header">
        <h2>Mon profil</h2>
        <button id="close-profile" class="close-button">
            <i class="fas fa-times"></i>
        </button>
    </div>
    
    <div class="profile-dropdown-content">
        <% if (connecte) { %>
            <div class="profile-menu">
                <a href="/profil" class="profile-menu-item">
                    <span>Mon compte</span>
                    <i class="fas fa-chevron-right"></i>
                </a>
                <a href="/commandes" class="profile-menu-item">
                    <span>Mes commandes</span>
                    <i class="fas fa-chevron-right"></i>
                </a>
                <a href="/coupCoeur" class="profile-menu-item">
                    <span>Mes coups de cœur</span>
                    <i class="fas fa-chevron-right"></i>
                </a>
                <a href="/emprunts" class="profile-menu-item">
                    <span>Mes emprunts</span>
                    <i class="fas fa-chevron-right"></i>
                </a>
                <a href="/notifications" class="profile-menu-item">
                    <span>Mes messages</span>
                    <i class="fas fa-chevron-right"></i>
                </a>
            </div>
            
            <a href="/deconnexion" class="btn btn-logout">Se déconnecter</a>
        <% } else { %>
            <div class="profile-not-connected">
                <p>Vous n'êtes pas connecté</p>
                <a href="/connexion" class="btn btn-primary mb-2 w-100">Se connecter</a>
                <a href="/inscription" class="btn btn-outline-primary w-100">S'inscrire</a>
            </div>
        <% } %>
    </div>
</div>

<!-- Ajoutez cette ligne dans le head de votre layout principal -->
<link rel="stylesheet" href="/css/header.css">
<link rel="stylesheet" href="/css/search.css">
<link rel="stylesheet" href="/css/profile.css">

<!-- Ajoutez cette ligne avant la fermeture du body dans votre layout principal -->
<script src="/js/header.js"></script>
<script src="/js/search.js"></script>
<script src="/js/profile.js"></script>
