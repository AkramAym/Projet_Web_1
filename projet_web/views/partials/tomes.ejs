<div class="manga-list">
    <% tomes.forEach(tome => { %>
      <div class="manga-item">
        <a href="/tomes/<%= tome.isbn %>">
          <img src="<%= tome.image %>" alt="<%= tome.titre_serie %> Tome <%= tome.numero_volume %>" class="manga-cover">
        </a>
  
        <div class="manga-info">
          <h3 class="manga-title">
            <a href="/tomes/<%= tome.isbn %>" class="title-link">
              <%= tome.titre_serie %> Tome <%= tome.numero_volume %>
            </a>
          </h3>
          <p class="manga-author"><%= tome.auteur %></p>
          <p class="manga-format">Couverture souple</p>
          <p class="manga-price"><%= tome.prix %> $</p>
        </div>
      </div>
    <% }) %>
  </div>
  