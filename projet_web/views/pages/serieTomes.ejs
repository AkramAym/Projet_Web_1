<!DOCTYPE html>
<html lang="fr">
<head>
    <link rel="stylesheet" href="/css/style.css">
    <%- include('../partials/header') %> <!-- Inclusion du header -->
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= serie.titre_serie %> - Tomes</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
</head>
<body>
    <div class="serie-container">
        <!-- Image Longue en bannière -->
        <div class="serie-banner">
            <img src="<%= serie.imageLong_serie %>" alt="Bannière de <%= serie.titre_serie %>">
        </div>
        
        <!-- Liste des tomes -->
        <div class="tomes-list">
            <% tomes.forEach(tome => { %>
                <div class="tome-card">
                    <a href="/tome/<%= tome.isbn %>">
                        <img src="<%= tome.image %>" alt="Couverture du tome <%= tome.numero_volume %>">
                        <p><%= serie.titre_serie %> Tome <%= tome.numero_volume %></p>
                        <p><%= tome.prix %> $</p>
                    </a>
                    <button class="favorite-btn"><i class="fa-regular fa-heart"></i></button>
                </div>
            <% }) %>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
<footer>
    <%- include('../partials/footer') %>
</footer>
</html>