<!DOCTYPE html>
<html lang="fr">
<head>
    <link rel="stylesheet" href="/css/index.css">
    <%- include('../partials/head') %>
    <%- include('../partials/header') %>

    <title><%= serie.titre_serie %> - Tomes</title>
</head>
<body>
    <div class="serie-container">
        <!-- Bannière longue en haut -->
        <div class="serie-banner <%= serie.titre_serie.toLowerCase().replace(/\\s/g, '-') %>">
            <img src="<%= serie.imageLong_serie %>" alt="Bannière de <%= serie.titre_serie %>">
        </div>

        <!-- Liste des tomes format moderne -->
        <section class="manga-section">
            <div class="container">
                <%- include('../partials/tomes') %>
            </div>
        </section>
    </div> 

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
<footer>
    <%- include('../partials/footer') %>
</footer>
</html>
 