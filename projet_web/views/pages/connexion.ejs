<!DOCTYPE html>
<html lang="fr">

<head>
    <%- include('../partials/head') %>
    <title>Connexion</title>
</head>

<div class="signup-container">
    <div class="signup-box">
        <!-- Logo -->
        <div class="logo-container">
            <a href="/">
                    <img src="/images/newLogo.png" alt="MangaThèque" class="logo-img">
            </a>
        </div>
        <link rel="stylesheet" href="/css/inscription.css">
        <body class="connexion-page">


        <!-- Titre -->
        <h2>Ouvrez une session</h2>

        <!-- Lien de connexion -->
        <p>Première fois sur la MangaThèque ? <a href="/inscription">Inscrivez-vous maintenant.</a></p>

     <!-- Formulaire -->
<form action="/connexion" method="POST">
    <div class="input-field">
        <input type="text" id="identifiant" name="identifiant" placeholder=" " required>
        <label for="identifiant">Identifiant</label>
    </div>

    <div class="input-field password-container">
        <input type="password" id="mot_de_passe" name="mot_de_passe" placeholder=" " required>
        <label for="mot_de_passe">Mot de passe</label>
        <span class="toggle-password">
            <i class="fas fa-eye"></i>
        </span>
    </div>

    <!-- Bouton de validation -->
    <button type="submit" class="signup-button">Ouvrir une session</button>
</form>
    </div>
 <% if (message) { %>
  <div class="erreur-message">
    <%= message %>
  </div>
<% } %>

</div>



<script src="/js/main.js"></script> 

