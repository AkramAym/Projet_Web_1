<%- include('header') %>

<div class="container">
    <div class="book-container">
        <!-- Image du tome -->
        <div class="book-image">
            <img src="<%= tome.image %>" alt="Couverture de <%= tome.titre_serie %>">
        </div>
        
        <!-- Infos du tome -->
        <div class="book-details">
            <h1><%= tome.titre_serie %></h1>
            <h2><%= tome.auteur %></h2>
            <p class="price">Prix: <strong><%= tome.prix %> $</strong></p>
            <p><strong>ISBN:</strong> <%= tome.isbn %></p>
            <p><strong>Année de publication:</strong> <%= tome.annee_publication %></p>
            <p><strong>Éditeur:</strong> <%= tome.editeur %></p>
            
            <div class="buttons">
                <button class="btn add-to-cart">Ajouter au panier</button>
                <button class="btn borrow">Emprunter</button>
            </div>
        </div>
    </div>

    <!-- Description du tome -->
    <div class="description">
        <h3>Description</h3>
        <p><%= tome.synopsis %></p>
    </div>
</div>