<body>
<div class="signup-container">
    <div class="signup-box">
        <!-- Logo -->
        <div class="logo-container">
            <a href="/">
                <img src="/images/logo.png" alt="MangaThèque" class="logo-img">
            </a>
        </div>
        <link rel="stylesheet" href="/css/inscription.css">

        <!-- Titre -->
        <h2>Créez votre compte</h2>

        <!-- Lien de connexion -->
        <p>Vous avez déjà un compte ? <a href="/connexion">Ouvrez une session</a></p>

        <!-- Formulaire -->
        <form action="/inscription" method="POST">
            <label for="identifiant">Identifiant</label>
            <input type="text" id="identifiant" name="identifiant" required>

            <label for="prenom">Prénom</label>
            <input type="text" id="prenom" name="prenom" required>

            <label for="nom">Nom de famille</label>
            <input type="text" id="nom" name="nom" required>

            <label for="telephone">Numéro de téléphone</label>
            <input type="tel" id="telephone" name="telephone" required>

            <label for="email">Adresse de courriel</label>
            <input type="email" id="email" name="email" required>

            <label for="password">Mot de passe</label>
            <div class="password-container">
                <input type="password" id="password" name="password" required>
                <span class="toggle-password">
                    <i class="fas fa-eye"></i>
                </span>
            </div>

            <!-- Bouton de validation -->
            <button type="submit" class="signup-button">Créer un compte</button>
        </form>
    </div>
</div>
</body>
<footer> <%- include('../partials/footer') %></footer>