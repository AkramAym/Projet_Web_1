<!DOCTYPE html>
<html lang="fr">

<head>
    <%- include('../partials/head') %>
    <link rel="stylesheet" href="/styles.css">
    <title>Vos coups de cœur</title>
</head>

<body>
    <%- include('../partials/header') %>
    
    <!-- Section "Coups-de-coeur" -->
    <div class="coups-de-coeur-container">
        <h1>Vos coups de cœur</h1>
        <div class="coups-de-coeur-list">
            <% tomes.forEach(function(tome) { %>
                <div class="manga-card">
                    <!-- Image du manga -->
                    <a href="/tome/<%= tome.isbn %>">
                        <img src="<%= tome.image %>" alt="<%= tome.titre_serie %> - Tome <%= tome.numero_volume %>">
                    </a>

                    <!-- Informations principales -->
                    <div class="manga-info">
                        <p><strong>Titre :</strong> <%= tome.titre_serie || 'Titre indisponible' %> - Tome <%= tome.numero_volume || 'N/A' %></p>
                        <p><strong>ISBN :</strong> <%= tome.isbn || 'Indisponible' %></p>
                    </div>

                    <!-- Bouton pour ajouter au panier -->
                    <div class="manga-actions">
                        <form action="/panier/<%= tome.isbn %>" method="POST">
                            <input type="hidden" name="quantite" value="1">
                            <button type="submit" class="add-to-cart-btn">Ajouter au panier</button>
                        </form>
                    </div>
                </div>
            <% }) %>
        </div>
    </div>

    <%- include('../partials/footer') %>
</body>

</html>
